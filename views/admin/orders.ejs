          <div class="table-responsive">
            <table class="table align-items-center table-flush">
              <thead class="thead-light">
                <tr>
                  <th>Order ID</th>
                  <th>Customer</th>
                  <th>Amount</th>
                  <th>Status</th>
              
                </tr>
              </thead>
              <tbody>
                <%if(List){%>
                    <% List.forEach((item) => { %>
                     
                <tr>
                  <td><a href="#"><%= item.orderNumber %></a></td>
                  <td><%= item.orderaddress.name%></td>
                  <td><%= item.totalprice %></td>
                  <td>
                    <% if( item.orderstatus=="Delivered"){ %>
                        <span class="badge badge-success"><%=item.orderstatus%></span>
                      <% }else if( item.orderstatus=="shipping"){ %>
                        <span class="badge badge-info"><%=item.orderstatus%></span>
                        <% }else if( item.orderstatus=="Out for Delivery"){ %>
                            <span class="badge badge-warning"><%=item.orderstatus%></span> 
                            <% }else if( item.orderstatus=="pending"){ %>
                                <span class="badge badge-danger"><%=item.orderstatus%></span>
                                <% }else if( item.orderstatus=="cancel"){ %>
                                  <span class="badge badge-warning"><%=item.orderstatus%></span> 
                                  <% }else if( item.orderstatus=="return"){ %>
                                    <span class="badge badge-danger"><%=item.orderstatus%></span> 
                                    
                        <% } %>
                <button data-bs-toggle="modal" data-bs-target="#exampleModal<%=item._id%>">Edit</button></td>

                
                </tr>



  <!-- Modal -->
                <div class="modal fade" id="exampleModal<%=item._id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <form action="updateStatus?id=<%=item._id%>" method="post">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Change status</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                               

                                <label class="btn btn-danger" for="">
                                    <input type="radio" name="status"  value="Processing">
                                   Processing
                                    
                                </label>

                                <label  class="btn btn-info"  for="">
                                    <input type="radio" name="status" value="shipping">
                                    Shipping
                                </label>
                               
                                <label  class="btn btn-warning"  for="">
                                    
                                    <input type="radio" name="status" value="Out for Delivery">
                                    Out for Delivery
                                </label>
                               
                                <label class="btn btn-success" for="">
                                    <input type="radio" name="status" value="Delivered">
                                   Delivered
                                </label>
                               
                               
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                                <button class="btn btn-success" type="submit">Save</button>
                            </div>
                        </form>
                      </div>
                    </div>
                  </div>
                
                <% }) %>
                <% } %>
           

              </tbody>
