<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Include Bootstrap CSS and any other necessary stylesheets -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<h2 class="text-center p-4">Profile</h2>
<% 
if(typeof message !=='undefined'){
    %>
    <h4 class="text-success p-2 text-center"><%= message %></h4>
    <%
}
%>
<div class="container mt-3">
    <div class="row">
        <div class="col-md-4">
            <!-- User Details -->
            <div class="card">
                <div class="card-header">User Details</div>
                <div class="card-body">
                    <!-- Display user details here -->
                    <p>Name:<%= profile.name%></p>
                    <p>Email: <%= profile.email%></p>
                    <p>mobile: <%= profile.mobile%></p>
                </div>
            </div>

            <!-- Addresses -->
            <div class="card mt-3">
                <div class="card-header">Addresses</div>
                <div class="card-body">
                    <!-- Display addresses here -->
                    
                    <ul>
                        <% if(profile.address.length){ for(i=0; i<profile.address.length; i++){ %>
                        <li><%= profile.address[i].name %>,<%= profile.address[i].place %>,<%= profile.address[i].mobile %>  <div class="cart_product_button">
                            <button class="cart_product_remove" onclick="removeAddress('<%= profile.address[i]._id %>')" data-index="<%= i %>">
                             <img src="images/trash.png" alt="">
                            </button></li>
                        <% }} %>
                    </ul>
                </div>
            </div>

            <!-- Add Address Form -->
            <div class="card mt-3">
                <div class="card-header">Add Address</div>
                <div class="card-body">
                    <!-- Add address form here -->
                    <form action="/addAddress?id=<%= profile._id %>" method="post">
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control"name="name" id="address" placeholder="Enter name">
                            <input type="text" class="form-control"name="place" id="address" placeholder="Enter place">
                            <input type="text" class="form-control"name="mobile" id="address" placeholder="Enter mobile">
                            <input type="text" class="form-control"name="district" id="address" placeholder="Enter district">
                            <input type="text" class="form-control"name="post" id="address" placeholder="Enter post">
                            <input type="text" class="form-control"name="state" id="address" placeholder="Enter state">
                        </div>
                        <button type="submit" class="btn btn-primary">Add Address</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- Edit Profile Form -->
            <div class="card">
                <div class="card-header">Edit Profile</div>
           
                <div class="card-body">
                    <!-- Edit profile form here -->
                    <form action="/editProfile" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="name" id="name" value="<%= profile.name%>">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" id="email" value="<%= profile.email%>">
                        </div>
                        <div class="form-group">
                            <label for="Number">mobile</label>
                            <input type="tel" class="form-control" name="mobile" id="mobile" value="<%= profile.mobile%>">
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>

            <!-- Cancel Order -->
            <div class="card mt-3">
                <div class="card-header">Cancel Order</div>
                <div class="card-body">
                    <!-- Cancel order form or action here -->
                    <p>Select an order to cancel:</p>
                    <select class="form-control">
                        <option>Order #123</option>
                        <option>Order #456</option>
                    </select>
                    <button class="btn btn-danger mt-2">Cancel Order</button>
                </div>
            </div>

            <!-- Forgot Password -->
            <div class="card mt-3">
                <div class="card-header">Forgot Password</div>
                <div class="card-body">
                    <!-- Forgot password form or action here -->
                    <form>
                        <div class="form-group">
                            <label for="forgotEmail">Email</label>
                            <input type="email" class="form-control" id="forgotEmail" placeholder="Enter your email">
                        </div>
                        <button type="submit" class="btn btn-primary">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
  function removeAddress(id){console.log(id);
    fetch(`/removeAddress/${id}`).then(()=>{
window.location.reload()
     }).catch((Error)=>{
        console.error('error');
     })}

</script>
<!-- Include Bootstrap JS and any other necessary scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
