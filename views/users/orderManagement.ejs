<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <!-- Include Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container text-center">
        <h1>Order Management</h1>
        
        <!-- Order History -->
        <h2>Order History</h2>
       
        <table class="table">
            <thead>
                <tr>
                    <th>Order Number</th>
                    <th>Date</th>
                    <th>Address</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>   </th>
                   
                </tr>
                
				
            </thead>
            <tbody>
                <%console.log(List)%>
                <%if(List){%>
                <% List.forEach((item) => { %>
                    <tr>
                       
                      <td> <a href="/invoice?id=<%= item._id %>" ><%= item.orderNumber %></a></td> 
                      <td><%= item.orderdate.toISOString().slice(0,10) %></td>
                      <td><%= item.orderaddress.name%>,<%= item.orderaddress.place%>,<%= item.orderaddress.mobile%></td>
                      <td> â‚¹ <%= item.totalprice %></td>
                      <td>	
                        <% if( item.orderstatus=="Delivered"){ %>
                            <span class="badge badge-success"><%=item.orderstatus%></span>
                           <td><button class="btn badge-danger">
                                <a class="text-dark" href="/return?id=<%= item._id %>">Return</a>
                              </button></td> 
                          <% }else if( item.orderstatus=="shipping"){ %>
                            <span class="badge badge-info"><%=item.orderstatus%></span>
                          <td> <button class="btn badge-warning">
                                <a href="/cancelOrder?id=<%= item._id %>">Cancel</a>
                              </button></td> 
                            <% }else if( item.orderstatus=="Out for Delivery"){ %>
                                <span class="badge badge-warning"><%=item.orderstatus%></span> 
                                <td><button class="btn badge-warning">
                                    <a href="/cancelOrder?id=<%= item._id %>">Cancel</a>
                                  </button></td>
                                <% }else if( item.orderstatus=="pending"){ %>
                                    <span class="badge badge-danger"><%=item.orderstatus%></span>
                                <td> <button class="btn badge-warning">
                                        <a href="/cancelOrder?id=<%= item._id %>">Cancel</a>
                                      </button></td>
                                      <% }else if( item.orderstatus=="return"){ %>
                                        <span class="badge badge-danger"><%=item.orderstatus%></span>
                                    <!-- <td> <button class="btn badge-warning">
                                            <a href="/cancelOrder?id=<%= item._id %>">Cancel</a>
                                          </button></td> -->
                                      <% }else if( item.orderstatus=="cancel"){ %>
                                        <span class="badge badge-warning"><%=item.orderstatus%></span>
                                    <td>  <button class="btn badge-success">
                                            <a class="text-dark" href="/cart">Order</a>
                                          </button></td>
                                        </button>
                                        <% }else if( item.orderstatus=="refund"){ %>
                                            <span class="badge badge-danger"><%=item.orderstatus%></span>
                                     
                            <% } %>
                        </td>
                   
                    </tr>
                  <% }) %>
                  <% } %>
             
                <!-- Add more rows as needed -->
            </tbody>
        </table>
        <a href="/" class="btn btn-primary">Back to Home</a>
        <a href="/cart" class="btn btn-primary">Back to Cart</a>
        <a href="/categories" class="btn btn-primary">Back to categary</a>
        <a href="/profile" class="btn btn-primary">Back to profile</a>
