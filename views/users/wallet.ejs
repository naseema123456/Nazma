				<li class="menu_mm"><a href="/admin">admin</a></li>
			</ul>
		</nav>
	</div>



    <div class="container mt-5">
        <h1 class="mb-4">My Wallet</h1>

        <!-- Wallet Balance -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Wallet Balance</h5>
            </div>
            <div class="card-body">
                <h2 class="card-text"> ₹ <%= user.balance %></h2>
             
            </div>
        </div>
        
        <!-- Transaction History -->
        <h5>Transaction History</h5>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
					<th>Type</th>
                    <th>Description</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
				<% if(user.transactions.length){ for(i=0; i<user.transactions.length; i++){ %>
                <tr>
                    <td><%= user.transactions[i].date.toISOString().slice(0,10) %></td>
					<td><%= user.transactions[i].type %></td>
                    <td><%= user.transactions[i].Description %></td>
                    <td> ₹ <%= user.transactions[i].amount %></td>
                </tr>
				<% }} %>
               
                <!-- Add more transaction rows here -->
            </tbody>
        </table>
    </div>





    

